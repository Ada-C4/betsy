<div class="row">
  <div class="col-md-12 text-center">
    <h1>YOUR CART</h1>
  </div>
</div>

<% if @order_items.size == 0 %>
  <p class="text-center">
    There are no items in your shopping cart.  Please <%= link_to "go back", root_path %> to accio some items to your cart.
  </p>
<% else %>
  <% @order_items.each do |order_item| %>
    <div class="row">
      <div class="col-md-4">
        <h4><%= order_item.product.name %> from <%= order_item.product.merchant.user_name %></h4>
        <p><%= link_to image_tag(order_item.product.photo_url,
                class: "thumbnail-image"), product_path(order_item.product.id) %></p>
        <p>
          $<%= number_with_precision(order_item.product.price, :precision => 2, :delimiter => ',') %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
