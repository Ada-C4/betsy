<h2> Enter Payment Info </h2>

<ul>
  <% @order.errors.each do |column, message| %>
    <li>
      <strong><%= column.capitalize %></strong> <%= message %>
    </li>
  <% end %>
</ul>

<%= form_for @order, url: {controller: "orders", action: "pay" }, :html => { :class => "form" } do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :cc_name, "Name on Card" %>
      <%= f.text_field :cc_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email_address, "Email" %>
      <%= f.email_field :email_address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :mailing_address, "Mailing address" %>
      <%= f.text_field :mailing_address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :cc_number, "Credit Card Number" %>
      <%= f.text_field :cc_cvv, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :cc_exp, "Credit Card Expiration" %>
      <%= f.text_field :cc_exp, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :cc_cvv, "Credit Card CVV" %>
      <%= f.number_field :cc_cvv, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :zip, "Zip Code" %>
      <%= f.number_field :zip, class: "form-control" %>
    </div>

    <%= f.submit "Purchase", :class => 'btn btn-info' %>
    <% end %>
  </fieldset>

<h2> Review Your Order </h2>

<div class="table-master">
<table class='table table-hover'>
  <% @order.orderitems.each do |orderitem| %>
  <tr>
    <td class="table-headers">
      Product
    </td>
    <td>
      <%= orderitem.product.name %>
    </td>
  </tr>
  <tr>
    <td class="table-headers">
      Description
    </td>
    <td>
      <%= orderitem.product.description%>
    </td>
  </tr>
  <tr>
    <td class="table-headers">
      Price
    </td>
    <td>
      <%= orderitem.product.price %>
    </td>
  </tr>
  <tr>
    <td class="table-headers">
      Photo
    </td>
    <td>
      <%= image_tag orderitem.product.photo_url %>
    </td>
  </tr>
  <tr>
    <td class="table-headers">
      Category
    </td>
    <td>
      <% orderitem.product.categories.each do |category| %>
      <%= category.name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td class="table-headers">
      Quantity
    </td>
    <td>
      <%= orderitem.quantity %>
    </td>
  </tr>
  <tr>
    <td class="table-headers">
      <%= button_to "Remove from Cart", orderitems_delete_path(orderitem.id), method: :delete %>
    </td>
  </tr>
  <% end %>
  </table>
</div>
<br>
<br>

  <%= button_to "Cancel Order", clear_cart_path, method: :delete %>
