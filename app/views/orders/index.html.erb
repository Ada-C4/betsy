<p id="notice"><%= notice %></p>

<h1><%= @user.name %>'s Orders</h1>

<table class="table table-hover .table-responsive">
  <thead>
    <tr>
      <th>Order #</th>
      <th>Status</th>
      <th>Order Item</th>
      <th>Quantity</th>
      <th>Shipped?</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <% order.order_items.each do |order_item| %>
        <% if order_item.product.user == @user %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.status %></td>
              <td><%= order_item.product.name %></td>
              <td><%= order_item.quantity %></td>
              <td><%= order_item.shipped %></td>
            <td>
              <%= link_to "View Order", user_order_path(@user.id, order.id) %>
            </td>
            <td>
              <%= button_to "Mark as Shipped", shipped_path(@user.id, order.id, order_item.id) %>
            </td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
