<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1><%= @merchant.username %>'s Orders</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <% if @orders.nil? %>
        <p>You have no orders.</p>
      <% end %>

      <table class="table table-hover">
      <th>Order</th>
      <th>Product</th>
      <th>Quantity</th>
        <% @orderitems.each do |orderitem| %>
          <tr>
            <td><%= orderitem.order_id %></td>
            <td><%= Product.find(orderitem.product_id).name %></td>
            <td><%= orderitem.quantity %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
