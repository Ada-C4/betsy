<div class="container">
    <%= render 'layouts/navbar' %>
  <div class="row">
    <div class="col-lg-12">
      <h1><%= @current_merchant.username %>'s Orders</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table table-hover">
      <th>Order</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Status</th>
        <% @orderitems.each do |orderitem| %>
          <tr>
            <td><%= orderitem.order_id %></td>
            <td><%= Product.find(orderitem.product_id).name %></td>
            <td><%= orderitem.quantity %></td>
            <td><%= orderitem.order.status %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
