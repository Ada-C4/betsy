<p id="notice"><%= notice %></p>

<h1><%= @user.name %>'s Orders</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Order Items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.status %></td>
        <td><% order.order_items.each do |oi| %>
              <% if oi.product.user == @user %>
                <%= oi.product.name %>(<%= oi.quantity %>)
                <br>
              <% end %>
            <% end %>
        </td>
        <td>
          <%= link_to "View Order", user_order_path(@user.id, order.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
