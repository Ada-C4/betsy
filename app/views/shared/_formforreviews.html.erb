<%= form_for @review, url: create_review_path do |f| %>
  <%= f.label :rating %>
  <%= f.number_field :rating, :required => true, :max => 5, :min => 0 %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.hidden_field :product_id, :value => @product.id %>
  <br>
  <%= f.submit %>
<% end %>
