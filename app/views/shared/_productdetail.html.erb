  <%= form_for [@current_merchant, @product], url: { action: @action}, method: @method, :html => { :class => "form"} do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :required => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, in: 1.0..1000000.0, step: 0.1, :required => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :photo_url %>
      <%= f.text_field :photo_url, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :category %>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, class: "checkbox" %>
    </div>
    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.number_field :quantity, in: 1...100000, step: 1, :required => true, class: "form-control" %>
    </div>
    <%= f.submit value:"Save", class:"btn btn-default" %>
  <% end %>
