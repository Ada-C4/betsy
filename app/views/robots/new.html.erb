<h1>Create Robot</h1>
<div class="form-group">
  <div class="center-div">
    <% if @robot.errors.any? %>
      <h2>Form is invalid</h2>
      <% for message in @robot.errors.full_messages %>
        <%= message %>
      <% end %> 
    <% end %>
    
    <%= form_for @robot do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: ' Userame', :class => "form-control" %><br>
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: ' Email', :class => "form-control" %><br>
      <%= f.label :password %> 
      <%= f.password_field :password, placeholder: 'Password', :class => "form-control" %><br>
      <%= f.label "Confirm Password" %> 
      <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', :class => "form-control" %><br>
      <%= f.submit :class => 'btn btn-default'%>
    <% end %>
  </div>
</div>