<div class="col-md-8 col-md-offset-2">
  <h1 class="title"><%= current_robot.username.titlecase %>'s Products</h1>
  <p class="title-buttons">
    <%= link_to "Account Orders", robot_orders_path(current_robot), class: 'btn btn-default' %> 
    <%= link_to "Add Product", new_robot_product_path(current_robot), class: 'btn btn-default' %> 
    <%= link_to "Add Category", new_category_path, class: 'btn btn-default' %> 
  </p>

  <table class="table table-hover table-bordered">
    <tr class="">
      <th>Product</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Update</th>
      <th>Retire</th>
    </tr>

  <% @products.each do |product| %>
    <tr class="valign">
      <td>
        <%= link_to product_path(product) do %>
          <%= image_tag product.picture_url, class: "dashboard" %><br>
          <%= product.name.titlecase %>
        <% end %> 
      </td>
      <td class="text-center">
        <%= number_to_currency(product.price) %>
      </td>
      <td class="text-center">
        <%= product.stock %>
      </td>
      <td class="text-center">
        <%= link_to "Edit", edit_product_path(product), class: 'btn btn-info' %>
      </td>
      <td class="text-center">
        <%= link_to "Retire", root_url, class: 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
