<h1>Hello <%= @user_name %></h1>

<h3>Welcome to Swagrid!</h3>

<% @categories.each do |category| %>
  <%= link_to category.name, category_products_path(category) %>
<% end %>
<%= link_to "All Products", products_path %>

<!-- <% @featured_products.each do |product| %>
