<div class="jumbotron">
  <h3>SEABAY is your #1 stop shop for all things related to the sea!</h3>
</div>
<div class="container">
  <%= render 'layouts/navbar' %>
  <% @categories.each_with_index do |cat, i| %>
    <% if i.odd? %>
      <div class="row">
    <% end %>
    <div class="col-sm-6 col-md-6">
      <div class="thumbnail">
        <img src="<%= cat.photo_url %>" alt="<% cat.name %>">
        <div class="caption">
          <%= link_to cat.name, category_path(cat.id), class: "h3" %>
        </div>
      </div>
    </div>
    <% if i.odd? %>
      </div>
    <% end %>
  <% end %>
</div>
