<div class="jumbotron">
  <h3>SEABAY is your #1 stop shop for all things related to the sea!</h3>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">SEABAY</a>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Shop by merchant <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <% @merchants.each do |m| %>
                    <li><%= link_to m.username, merchant_products_path(m.id) %></li>
                  <% end %>
                </ul>
              </li>
            </ul>
            <!-- <form class="navbar-form navbar-left" role="search">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form> -->
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/sessions/new">Sign In</a></li>
              <li><a href="/merchants/new">Register</a></li>
              <li><a href="/carts">Cart</a></li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </div>
  </div>
  <% @categories.each_with_index do |cat, i| %>
    <% if i.odd? %>
      <div class="row">
    <% end %>
    <div class="col-sm-6 col-md-6">
      <div class="thumbnail">
        <img src="<%= cat.photo_url %>" alt="<% cat.name %>">
        <div class="caption">
          <%= link_to cat.name, category_path(cat.id), class: "h3" %>
        </div>
      </div>
    </div>
    <% if i.odd? %>
      </div>
    <% end %>
  <% end %>
</div>
