<%= render 'cat_navbar' %>

<div class='jumbotron'>
  <h1 class='front-pg'>Welcome to Quartzy</h1>
  <h2 class='front-pg2'>(gems on gems on gems)</h2>
</div>
<div class="row">
  <div class="col-sm-6">
    <h2 class='front-pg2'>Highlighted Merchants</h2>
    <% @top_users.each do |user| %>
      <h2>
        <%= link_to "#{user.username}", user_path(user) %>
      </h2>

      <% user.top(2).each do |product| %>
        <h4>
          <%= image_tag "#{product.photo_url}", class: "img-responsive, product-page-img" %><br>
          <%= link_to "#{product.name}", product_path(product) %><br>
        </h4>
      <% end %>
    <% end %>
  </div>
  <div class="col-sm-6">
    <h2 class='front-pg2'>Highlighted Gem Categories</h2>
    <% @top_categories.each do |category| %>
      <h2>
        <%= link_to "#{category.name}", category_path(category) %>
      </h2>
      <% category.top(2).each do |product| %>
        <h4>
          <%= image_tag "#{product.photo_url}", class: "img-responsive, product-page-img" %><br>
          <%= link_to "#{product.name}", product_path(product) %><br>
        </h4>
      <% end %>
    <% end %>
  </div>
</div>
