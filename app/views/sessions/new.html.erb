<div class="container">
<h1>Login to Seabay</h1>

<% if !flash.now[:error].nil? %>
  <div class= "alert alert-danger" role="alert"><%= flash.now[:error] %></div>
<% end %>

<%= form_for(:session_data, url: sessions_path) do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control" %>
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
    <br>
    <%= f.submit "Log In", class: "btn btn-info" %>
  </div>
<% end %>
</div>
