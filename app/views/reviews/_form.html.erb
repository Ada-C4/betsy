<ul>
  <% @review.errors.each do |column, message| %>
    <li>
      <strong><%= column.capitalize %></strong> <%= message %>
    </li>
  <% end %>
</ul>

<div class="row">
  <div class="col-md-12">
    <%= form_for [@product.user, @product, @review], :html => {:class => "form-group"} do |f| %>
        <%= f.label :rating, "Rating (1-5)" %><br>
        <%= f.number_field :rating, class: 'form-control', :required => true %>
        <%= f.label :description %><br>
        <%= f.text_field :description, class: 'form-control' %>
        <br>
        <%= f.submit value: "Save My Review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
