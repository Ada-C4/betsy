<div class="sidebar pull-left">
  <%= render "sidebar" %>
</div>


<div class="container photo-gallery pull-right">
  <% @products.each_with_index do |product, index| %>
    <% if !product.retired? %>
      <% if index % 4 == 0 %>
        <div class="row">
      <% end %>
      <div class="col-md-4 col-sm-6 col-xs-12 thumb">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <div class="caption">
          <%= link_to product.name + " " + cents_to_dollars(product.price), product_path(product.id) %>
        </div>
        <br>
      </div>
      <% if index % 4 == 3 %>
      </div>
      <% end %>
    <% end %>
  <% end %>
</div>
