<h2>Products</h2>
<div class="row">
  <% @products.each do |product| %>
    <% if product.stock != 0 %>
      <div class="col-md-4">
        <div class= "thumbnail">
          <div class="image-holder">
            <a href= "<%= product_path(product.id) %>">
              <%= image_tag(product.picture_url, class: "img-rounded product-thumb") %>
          </div>
          <div class="caption">
            <h3><center><%= product.name %></center></h3></a>
            <h5 class="pull-right"><%= number_to_currency(product.price) %></h5>
            <h5><%= product.stock %> in stock</h5>
            <h5 class="pull-right"><%= product.reviews.count %> Reviews</h5>
            <% if !product.reviews.empty? %>
              <div class='star'><p><% product.rating_average.times do |star| %>
                <%= fa_icon('star') %>
              <% end %></p></div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
