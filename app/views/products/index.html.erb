<div class="row">
  <div class="col-md-12 text-center">
    <h1> All Products </h1>
  </div>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <%= image_tag(product.photo_url) %>
      </div>
      <div class="caption">
        <%= link_to product.name, product %>
        <%= product.price %>
      </div>
    </div>
  <% end %>
</div>
