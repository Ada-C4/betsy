<h2>My Products</h2>
<table>
  <tbody>
    <% @current_merchant.products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product_path(product.id) %></td>
      <td><%= link_to "|edit|", edit_merchant_product_path(@current_merchant.id, product.id) %></td>
    </tr>
    <% end %>
    <% if @current_merchant.products.count == 0 %>
      <tr>
        <td>There are currently no products to sell. Please add some.</td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Add A New Product", new_merchant_product_path(@current_merchant.id) %>
