<div class="sidebar pull-left">
  <div class="btn-group-vertical" role="group" aria-label="...">
    <button type="button" class="btn btn-default" aria-haspopup="true" aria-expanded="false">
    <%= link_to(root_path) do %>
       by product
    <% end %>
    </button>

    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        by category
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <% @categories.each do |cat| %>
          <li><%= link_to(root_path(:type => 'cat', :order => cat.id)) do %>
          <%= cat.name %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        by merchant
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <% @merchants.each do |merch| %>
          <li><%= link_to(root_path(:type => 'merch',:order => merch.id)) do %>
          <%= merch.first_name %> <%= merch.last_name %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<div class="container photo-gallery pull-right">
  <% @products.each_with_index do |product, index| %>
    <% if !product.retired? %>
      <% if index % 4 == 0 %>
        <div class="row">
      <% end %>
      <div class="col-md-4 col-sm-6 col-xs-12 thumb">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <div class="caption">
          <%= link_to product.name + " " + cents_to_dollars(product.price), product_path(product.id) %>
        </div>
        <br>
      </div>
      <% if index % 4 == 3 %>
      </div>
      <% end %>
    <% end %>
  <% end %>
</div>
