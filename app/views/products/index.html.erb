
<div class="row cat-container">
  <% @categories.each do |category| %>
    <div class="cat-link-container">
      <%= link_to category.name, category_products_path(category), class: "cat-link" %>
    </div>
  <% end %>
  <div class="cat-link-container">
    <%= link_to "All Products", products_path, class: "cat-link" %>
  </div>
</div>
<hr>

<!-- <h4> dropdown merchants goes here </h4> -->

<div class="row">
  <div class="col-md-12 text-center">
    <h1> <%= @header %> </h1>
  </div>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <%= link_to image_tag(product.photo_url, class: "thumbnail-image"), product %>
        <!-- <%= image_tag(product.photo_url, class: "thumbnail-image") %> -->
      </div>
      <div class="caption">
        <%= link_to product.name, product %>
        $<%= number_with_precision(product.price, :precision => 2, :delimiter => ',') %>
      </div>
    </div>
  <% end %>
</div>
