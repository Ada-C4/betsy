<h2>Products</h2>
<div class="row">
  <% @products.each do |product| %>
  <div class="col-md-4">
    <div class= "img thumbnail">
      <a href= "<%= product_path(product.id) %>"></a>
      <%= image_tag(product.picture_url) %>
      <div class="caption">
        <h3><center><%= product.name %></center></h3>
        <h5 class="pull-right"><%= number_to_currency(product.price) %></h5>
        <h5 class="pull-left"><%= product.stock %> in stock</h5>
        <% if !product.reviews.empty? %>
          <div class='star'><p><% product.rating_average.times do |star| %> 
            <%= fa_icon('star') %>
          <% end %></p></div>
        <% end %> 
      </div>
    </div>
  </div>
  <% end %>
</div>
