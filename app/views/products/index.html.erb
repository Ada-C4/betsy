<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>User</th>
      <th>Photo url</th>
      <th>Stock</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.user_id %></td>
        <td><%= product.photo_url %></td>
        <td><%= product.stock %></td>
        <td><%= product.description %></td>
        <td>
          <% if product.active %>
            Active
          <% else %>
            Retired
          <% end %>
        </td>
        <td><%= link_to 'Show', user_product_path(product.id, product.user_id) %></td>
        <td><%= link_to 'Edit', edit_user_product_path(product.id, product.user_id) %></td>
        <td><%= link_to 'Destroy', user_product_path(product.id, product.user_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

