<ul>
  <% @product.errors.each do |column, message| %>
    <li>
      <strong><%= column.capitalize %></strong> <%= message %>
    </li>
  <% end %>
</ul>

<%= form_for @product, :html => { :class => "form" } do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, step: 0.5, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :photo_url %>
      <%= f.url_field :photo_url, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :stock %>
      <%= f.number_field :stock, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.fields_for :categories do |category| %>
      <%= category.label :id, "Category" %>
      <%= category.collection_select(:id, Category.all, :id, :name, { prompt: "Select a Category:" }, { class: "form-control" }) %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.hidden_field :retired, class: "form-control" %>
    </div>

  </fieldset>
  <%= f.submit class: "btn btn-info" %>
<% end %>
