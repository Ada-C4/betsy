    <%= f.text_field :photo_url %>

    <%= f.label :stock %>
    <%= f.number_field :stock %>

    <%= f.label :description %><br>
    <%= f.text_field :description %>

    <%= f.label :active %><br>
    <%= f.check_box :active %>

    <%= f.submit %>
  </div>
<% end %>
