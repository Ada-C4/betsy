<div class="row">
  <div class="col-lg-12">
    <fieldset>
      <%= form_for product, url:{action: action}, :html => {:class => "form" } do |f| %>
        <h2><%= title %></h2>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, "Price $" %>
          <%= f.number_field :price, class: "form-control", :min => 0, :step => 0.01 %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_area :description, class: "form-control" %><br>
        </div>
        <div class="form-group">
          <%= f.label :categories %><br>
          <%= f.collection_check_boxes :categories, Category.all, :id, :name do |b| %>
            <%= b.check_box %>
            <%= b.label %> <br>
          <% end %>
          <!-- <label for=:category>Select a Category for Your Product (hold shift to select more than one):</label>
          <select multiple class="form-control" id="sel2">
            <% @categories.each do |cat| %>
              <option><%= cat.name %></option>
            <%end%>
          </select>
        </div> -->
        <div class="form-group">
          <%= f.label :photo_url %><br>
          <%= f.url_field :photo_url, class: "form-control" %><br>
        </div>
        <div class="form-group">
          <%= f.label :inventory, "Number in Stock" %><br>
          <%= f.number_field :inventory, class: "form-control" %><br>
        </div>
        <%= f.submit "Save", class: "btn btn-default" %>
      <% end %>
    </fieldset>
  </div>
</div>
