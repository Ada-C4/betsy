<% if !flash[:error].nil? %>
  <div class= "alert alert-danger" role="alert"><%= flash[:error] %></div>
<% end %>

<h1><%= @product.name %></h1>

<%= image_tag(@product.photo_url) %>

<p>Description: <%= @product.description %></p>
<p>Price: $<%= @product.price/100.0 %></p>


<div>
  <p>Add to or remove from cart:</p>

  <%= button_to "+", add_quantity_path(@product.id) %>
  Available: <%= @product.quantity %>
  <%= button_to "-", remove_quantity_path(@product.id) %>
</div>

<div>
<p>Reviews:</p>
  <% @reviews.each do |review| %>
    <div>
      Rating: <%= review.rating %>
      <br>
      <%= review.description %>
    </div>
  <% end %>
</div>

<h3>Add a Review:</h3>
<%= render partial: "shared/formforreviews" %>
