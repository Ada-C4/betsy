<div class="col-md-12 text-center">
  <h1> <%= @product.name %> </h1>
  <%= image_tag(@product.photo_url) %>
  <h4> Price: $<%= number_with_precision(@product.price, :precision => 2, :delimiter => ',') %> </h4>
  <p> <%= @product.description %></p>

  <!-- this should only be visible for merchant if logged in -->
  <%= link_to "Edit Product", edit_merchant_product_path(@product.merchant_id, @product.id), class: "btn btn-default" %>
  <%= link_to "Delete Product", product_path(@product),method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>

  <h4> LINK TO LEAVE A NEW REVIEW GOES HERE </h4>

  <table class="table table-hover">
      <tbody>
        <% @product.reviews.each do |review| %>
          <tr>
            <td> <%= review.rating %></td>
            <td> <%= review.description %></td>
          </tr>
          <% end %>
      </tbody>
  </table>
</div>
